
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>ورود</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <img class="captcha-image" src="@Url.Action("CaptchaImage", "Default", routeValues: new{ rdnDate = DateTime.Now.Ticks })" />
            <a href="#" class="refresh-captcha">تازه سازی</a>

}
@section Scripts{
    <script type="text/javascript">
        $('a.refresh-captcha').on('click', function (e) {
            e.preventDefault();
            $('.captcha-image').attr('src', "@Url.Action("CaptchaImage")" + "?t=" + new Date().getTime());

        });
    </script>
}