@model AkoSatrap.Controllers.Login
<!DOCTYPE html>
<html lang="en" class="login">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Core/SiteCore/css/bootstrap.min.css" />
</head>
<body>

    <div class="container rtl">
        <div class="row align-items-center justify-content-center">

            <div class="col-md-8 col-lg-6">
                <div class="row">
                    <div class="col-md-8 pl-md-0">
                        <div class="login-items-wrapper">

                            @using (Html.BeginForm())
                            {
                                <div class="form-group">
                                    <label for="FDID" class="form-control-label">نام کاربری</label>
                                    <input id="FDID" class="form-control form-control-sm" type="text" name="UserName"
                                           placeholder="user name">

                                </div>
                                <div class="form-group">
                                    <label for="FDID" class="form-control-label">کلمه عبور</label>
                                    <input id="FDID" class="form-control form-control-sm" type="password" name="Password"
                                           placeholder="Password">
                                    @*<small id="FDID-help" class="form-text text-muted">Help text</small>*@
                                </div>
                                <div class="form-group">
                                    <div class="captcha">
                                        <label>عبارت موجود در تصویر را تایپ نمایید</label>

                                        <div class="captcha-img-wrapper">
                                            <img class="captcha-img" src="../core/img/captcha.png" alt="">
                                            <button class="btn btn-sm captcha-btn">
                                                <i class="fa fa-refresh" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                        <input type="text" class="form-control form-control-sm">
                                    </div>
                                </div>
                                <div class="form-group mb-0">
                                    <button class="btn btn-sm btn-success" type="submit">ورود به سیستم</button>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="hidden-sm-down col-md-4 pr-0">

                        <div class="login-img"></div>

                    </div>
                </div>
            </div>

        </div>
    </div>
    }
    <footer class="footer">
        <div class="container">
            <span class="text-white">Copyright © 2017 Iran Kish</span>
        </div>
    </footer>
    <script src="~/Core/SiteCore/js/jquery.min.js"></script>
    <script src="~/Core/SiteCore/js/tether.min.js"></script>
    <script src="~/Core/SiteCore/js/bootstrap.min.js"></script>
    <script src="~/Core/SiteCore/js/main.js"></script>
</body>
</html>

