
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="tbl">
                <div class="tbl-row">

                    <div class="tbl-cell main-content">

                        <div>
                            <div>
                                <div class="cssload-loader-inner">
                                    <div class="cssload-cssload-loader-line-wrap-wrap">
                                        <div class="cssload-loader-line-wrap"></div>
                                    </div>
                                    <div class="cssload-cssload-loader-line-wrap-wrap">
                                        <div class="cssload-loader-line-wrap"></div>
                                    </div>
                                    <div class="cssload-cssload-loader-line-wrap-wrap">
                                        <div class="cssload-loader-line-wrap"></div>
                                    </div>
                                    <div class="cssload-cssload-loader-line-wrap-wrap">
                                        <div class="cssload-loader-line-wrap"></div>
                                    </div>
                                    <div class="cssload-cssload-loader-line-wrap-wrap">
                                        <div class="cssload-loader-line-wrap"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="row min-height">
                                @foreach (var item in Model)
                                {
                                    <div class="col-sm-6 ">
                                        <div class="deal project">
                                            <a href="@Url.Action("Project","Project", new { id=item.Id, seoName = item.GenerateSlug() })" class="deal-blocks-wrapper">
                                                <div class="deal-block deal-img">


                                                    <div class="deal-labels">
                                                        <ul>
                                                            <li class="bold">درحال اجرا</li>
                                                        </ul>
                                                    </div>
                                                    <div class="img"
                                                         style="background-image: url('@Url.Content(item.Images[0])')"></div>
                                                    <div class="bottom-border"></div>
                                                </div>
                                                <div class="deal-block deal-txt">

                                                    <div class="deal-detail project-name">
                                                        <div class="row">
                                                            <div class="col-xs-12 deal-price-wrapper">
                                                                <h4>
                                                                    <span class="bottom-left-borders"></span><span class="top-right-borders"></span>@item.Title
                                                                </h4>
                                                            </div>

                                                        </div>
                                                    </div>

                                                    <div class="tbl">
                                                        <div class="tbl-row">
                                                            <div class="tbl-cell detail-wrapper">
                                                                <div class="deal-detail">
                                                                    <div class="row">
                                                                        <div class="col-xs-12 facilities-wrapper">
                                                                            <div class="txt-left-plus-icon">
                                                                                <div class="icon-block">
                                                                                    <div class="icon icon-i-016"></div>
                                                                                </div>
                                                                                <p>استان: @item.Province</p>
                                                                            </div>
                                                                        </div>
                                                                        <div class="col-xs-12 facilities-wrapper">
                                                                            <div class="txt-left-plus-icon">
                                                                                <div class="icon-block">
                                                                                    <div class="glyphicon glyphicon-calendar"></div>
                                                                                </div>
                                                                                <p>تاریخ شروع: @item.StartDate</p>
                                                                            </div>
                                                                        </div>
                                                                        <div class="col-xs-12 facilities-wrapper">
                                                                            <div class="txt-left-plus-icon">
                                                                                <div class="icon-block">
                                                                                    <div class="glyphicon glyphicon-calendar"></div>
                                                                                </div>
                                                                                <p>تاریخ پایان: @item.EndDate</p>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="tbl-cell gauge-wrapper">
                                                                <div class="gauge">
                                                                    <div class="tbl">
                                                                        <div class="gauge-blocks-wrapper tbl-row">

                                                                            <div class="gauge-block title tbl-cell">
                                                                                <h5 class="txt-brand-color-lightviolet text-left">پیشرفت فیزیکی پروژه</h5>
                                                                            </div>
                                                                            <div class="gauge-block svg tbl-cell">
                                                                                <div class="projectPercetage" id="@item.Id" style="color:white">@item.CompletionPercentage</div>
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>



                                                    <div class="deal-detail" style="border-top: 4px solid #f1f1f1;">
                                                        <div class="row">
                                                            <div class="col-xs-12 facilities-wrapper">
                                                                <div class="txt-left-plus-icon">
                                                                    <div class="txt-left-plus-icon">
                                                                        <span class="glyphicon glyphicon glyphicon-paperclip txt-brand-color-lightviolet pull-right" style="margin-left: 10px;"></span>
                                                                        <p class="bold txt-brand-color-lightviolet">توضیحات</p>
                                                                    </div>
                                                                    <p class="text-justify">@item.Description</p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    @*<div class="deal-block deal-txt">
                    <div class="deal-detail">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="title-wrapper">
                                    <div class="title"><h4><span class="glyphicon glyphicon-fire icon" aria-hidden="true"></span>@item.Title</h4></div>
                                </div>
                                <div class="txt-left-plus-icon">
                                    <span class="glyphicon glyphicon glyphicon-paperclip txt-brand-color-lightviolet pull-right" style="margin-left: 10px;"></span>
                                    <p class="bold txt-brand-color-lightviolet">توضیحات</p>
                                </div>
                                <p class="text-justify">@item.Description</p>
                            </div>
                        </div>
                    </div>
                </div>*@

                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
