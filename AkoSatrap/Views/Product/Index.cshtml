@model List<ViewModel.ProductModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="search-result">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="tbl">
                    <div class="tbl-row">
                        <div class="tbl-cell main-content">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-xs-12 col-md-6 ">
                                        <div class="deal">
                                            <a href="@Url.Action("Product","Product", new { id=item.Id, seoName = item.GenerateSlug() })" class="deal-blocks-wrapper">
                                                <div class="deal-block deal-img">
                                                    <div class="img"
                                                         style="background-image: url('@Url.Content(item.Images[0])')"></div>
                                                </div>
                                                <div class="deal-block deal-txt">
                                                    <div class="deal-detail">
                                                        <div class="row">
                                                            <div class="col-xs-12">
                                                                <div class="title-wrapper">
                                                                    <div class="title"><h4><span class="glyphicon glyphicon-fire icon" aria-hidden="true"></span>@item.Title</h4></div>
                                                                </div>
                                                                <div class="txt-left-plus-icon">
                                                                    <span class="glyphicon glyphicon glyphicon-paperclip txt-brand-color-lightviolet pull-right" style="margin-left: 10px;"></span>
                                                                    <p class="bold txt-brand-color-lightviolet">توضیحات</p>
                                                                </div>
                                                                <p class="text-justify">@item.Description</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section PageName
{
    محصولات
}
@section Scripts{

}
